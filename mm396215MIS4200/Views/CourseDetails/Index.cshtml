@model IEnumerable<mm396215MIS4200.Models.CourseDetail>

@{
    ViewBag.Title = "Course Deails";
}

<h2 style="color:rgb(255, 94, 159);">Course Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered + table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Courses.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.textbookPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Courses.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.courseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.textbookPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.coursedetailID }) |
                @Html.ActionLink("Details", "Details", new { id = item.coursedetailID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.coursedetailID })
            </td>
        </tr>
    }

</table>
<p>
    
    <button type="button" class="btn btn-warning">Warning: Pressing "Delete" will permanetly remove records</button>
</p>
